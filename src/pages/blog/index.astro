---
import Layout from "../../layouts/Layout.astro";
import PostsCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => {
  return (
    data.published &&
    (!data.published || new Date(data.published) <= new Date())
  );
});

const sortedPosts = posts.sort((a, b) => {
  return (
    new Date(b.data.published).getTime() - new Date(a.data.published).getTime()
  );
});
---

<Layout
  title="Posts | Lukáš Netolický"
  description="My personal blog where i share interesting projectda and problems i takcle."
>
  <div class="container">
    <section class="page-header">
      <h1>My <span class="highlight">Blog</span></h1>
      <p class="subtitle">
        Welcome to my blog! Here, I share my thoughts, experiences, and insights
        on various topics. From technology to personal development, I hope you
        find something that resonates with you. Feel free to explore and engage
        with the content. Your feedback and thoughts are always welcome!
      </p>
    </section>

    <section class="projects-grid">
      {
        sortedPosts.length !== 0 && (
          <div class="projects-container">
            {sortedPosts.map((post) => (
              <PostsCard data={post.data} id={post.id} />
            ))}
          </div>
        )
      }
    </section>
  </div>
</Layout>

<style>
  .projects-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-3xl);
  }

  @media (max-width: 768px) {
    .projects-container {
      grid-template-columns: 1fr;
    }
  }
</style>
