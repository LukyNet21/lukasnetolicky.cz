	{ name: "HTML/CSS", category: "frontend" },
	{ name: "Astro", category: "tools" },

	// Backend
	{ name: "Go", category: "backend" },
	{ name: "PostgreSQL", category: "backend" },
	{ name: "Next.js", category: "backend" },

	// Tools
	{ name: "Git", category: "tools" },
	{ name: "Docker", category: "tools" },
];
