---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";

const technologies = [
  // Frontend
  { name: "React", category: "frontend" },
  { name: "TypeScript", category: "frontend" },
  { name: "JavaScript", category: "frontend" },
  { name: "Tailwind CSS", category: "frontend" },
  { name: "HTML/CSS", category: "frontend" },
  { name: "Astro", category: "frontend" },

  // Backend
  { name: "Go", category: "backend" },
  { name: "PostgreSQL", category: "backend" },
  { name: "Next.js", category: "backend" },

  // Tools
  { name: "Git", category: "tools" },
  { name: "Docker", category: "tools" },
];
---

<Layout
  title="Lukáš Netolický | Computer Enthusiast"
  description="High school student who loves coding and tech stuff."
>
  <section class="container">
    <div class="hero">
      <h1>Hey! I'm <span class="highlight">Lukáš</span></h1>
      <p class="hero-subtitle">Student Developer</p>
      <p class="hero-description">
        I'm a 16-year-old high school student who loves coding and tech stuff. I
        enjoy learning new things and building projects that challenge my
        skills. I'm always looking for new opportunities to grow and improve my
        skills. Whether it's through school or my personal side projects, I'm
        committed to pushing myself to learn and grow!
      </p>
      <div class="hero-buttons">
        <Link href="/projects" type="primary">Check Out My Projects</Link>
        <Link href="/about" color="secondary">More About Me</Link>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="home-section about">
    <div class="container">
      <h2>About Me</h2>
      <div class="about-content">
        <p>
          I'm a high school student that likes coding. I love figuring
          out how stuff works and learning when things break along the way.
          Playing with different technologies, libraries, and programming
          languages is something I really enjoy!
        </p>
        <p>
          My projects range from web apps to all sorts of coding experiments.
          I'm all about hands-on learning experience and enjoy going into
          different challenges that level up my skills and help me solve cool
          problems.
        </p>
      </div>
    </div>
  </section>

  <!-- Technologies Section -->
  <section class="container home-section technologies">
    <h2>Technologies I Work With</h2>
    <div class="tech-categories">
      <div class="tech-category">
        <h3>Frontend</h3>
        <ul class="tech-list">
          {
            technologies
              .filter((tech) => tech.category === "frontend")
              .map((tech) => <li class="tech-item">{tech.name}</li>)
          }
        </ul>
      </div>
      <div class="tech-category">
        <h3>Backend</h3>
        <ul class="tech-list">
          {
            technologies
              .filter((tech) => tech.category === "backend")
              .map((tech) => <li class="tech-item">{tech.name}</li>)
          }
        </ul>
      </div>
      <div class="tech-category">
        <h3>Tools & Others</h3>
        <ul class="tech-list">
          {
            technologies
              .filter((tech) => tech.category === "tools")
              .map((tech) => <li class="tech-item">{tech.name}</li>)
          }
        </ul>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-3xl) 0;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .hero h1 {
    font-size: var(--font-5xl);
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: var(--font-2xl);
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    font-weight: var(--font-medium);
  }

  .hero-description {
    font-size: var(--font-lg);
    margin-bottom: var(--space-xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
  }

  /* About Section */
  .home-section {
    padding: var(--space-3xl) 0;
  }

  .home-section h2 {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .about {
    background-color: var(--bg);
  }

  .about-content {
    max-width: 810px;
    margin: 0 auto;
  }

  .about-content p {
    margin-bottom: var(--space-md);
    line-height: 1.6;
  }

  /* Technologies Section */
  .tech-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(190px, 1fr));
    gap: var(--space-xl);
    margin: 0 auto;
  }

  .tech-category h3 {
    margin-bottom: var(--space-md);
    color: var(--secondary);
    text-align: center;
  }

  .tech-list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
  }

  .tech-item {
    background: var(--gradient);
    border: 1px solid var(--bg-light);
    padding: var(--space-xs) var(--space-md);
    border-radius: 20px;
    font-size: var(--font-sm);
    box-shadow: var(--shadow);
    transition: transform 0.2s ease;
  }

  .tech-item:hover {
    background: var(--gradient-hover);
    box-shadow: var(--shadow-hover);
    transform: translateY(-3px);
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: var(--font-4xl);
    }

    .hero-subtitle {
      font-size: var(--font-xl);
    }

    .hero-buttons {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .tech-categories {
      grid-template-columns: 1fr;
    }
  }
</style>
